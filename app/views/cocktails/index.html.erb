
<div class="container" id="content">
  <h1>All cocktails</h1>

  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail), :class => "card-category", :style => "background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @article.photo, height: 300, width: 400, crop: :fill %>)" do %>

          <h3><%= cocktail.name %></h3>
        <% end %>
      <% end %>
    <% end %>
  </div>

</div>



